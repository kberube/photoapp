<h1>Photos</h1>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Date</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <% if photo.user == current_user %>
        <tr>
          <td><%= photo.user_id %></td>
          <td><%= photo.name %></td>
          <td><%= photo.date %></td>
          <td><%= photo.rating %></td>
          <td><%= link_to 'Show', photo %></td>
          <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure you want to delete this Photo?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Photo', new_photo_path, class:"btn btn-secondary" %>
