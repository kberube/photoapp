<h1>Photos</h1>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <% if current_user.id <= 3 %>
      <th colspan="3"></th>
      <% else %>
      <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <% if photo.user == current_user || current_user.id <= 3 %>
        <tr>
          <td><%= photo.name %></td>
          <td><%= photo.date %></td>
          <td><%= link_to 'Open', photo %></td>
          <% if current_user.id <= 3 %>
            <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
            <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure you want to delete this Photo?' } %></td>
          <% end %>


        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.id <= 3 %>
<%= link_to 'New Photo', new_photo_path, class:"btn btn-secondary" %>
<% end %>
